<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="plainText">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="boldText">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="specialText">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="sectionHeader" parent="specialText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="buttonText" parent="specialText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="regularText" parent="plainText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="headerText" parent="boldText">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="profileText" parent="boldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="profileEmail" parent="plainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="menuItem" parent="boldText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="inputPetField" parent="plainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="inputPetContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/colorPrimary</item>
    </style>

    <style name="rounded_button">
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="loginFields" parent="plainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="startIconContentDescription">@string/fieldImage</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/design_default_color_background</item>
    </style>

    <style name="loginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/design_default_color_background</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="calendar_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="calendar_button" parent="rounded_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="icon">@drawable/icon_add</item>
        <item name="iconSize">20dp</item>
    </style>
    
</resources>
