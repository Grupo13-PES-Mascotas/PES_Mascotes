<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="plainText">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="boldText">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="specialText">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="sectionHeader" parent="specialText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="buttonText" parent="specialText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="regularText" parent="plainText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="headerText" parent="boldText">
        <item name="android:textSize">20sp</item>
    </style>



</resources>
