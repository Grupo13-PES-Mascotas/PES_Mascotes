<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".activities.fragments.infopet.InfoPetFragment">


    <LinearLayout
        android:id="@+id/layoutPetInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <org.pesmypetcare.mypetcare.activities.views.CircularImageView
            android:id="@+id/imgPet"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/c4907577a372c21c3ea70cad4b59eb07" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/petName"
            style="@style/TextAppearance.MaterialComponents.Headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:startIconContentDescription="Pet Name"
            android:layout_marginStart="30dp"
            android:gravity="center"
            app:boxBackgroundColor="@color/colorAccent"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_surface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_surface"
                android:text="@string/name_random"
                android:focusable="false"
                android:singleLine="true"
                android:textSize="30sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/petType"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_dog"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/type_of_pet" />


    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollInfoPet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/breed_title"
                app:hintEnabled="true"
                app:startIconContentDescription="@string/breed_title"
                app:hintAnimationEnabled="true"
                app:boxStrokeColor = "@color/colorAccent"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtBreed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breed_random" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/weight_title"
                app:helperTextEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="@string/breed_title"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_random" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:hint="@string/gender_title"
                android:layout_weight="0.6"
                app:endIconMode="dropdown_menu"
                android:layout_height="match_parent"
               app:boxBackgroundColor="@color/white">

                <AutoCompleteTextView
                    android:id="@+id/inputGender"
                    android:paddingTop="20dp"
                    android:paddingStart="12dp"
                    android:inputType="text"
                    tools:ignore="RtlSymmetry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:ems="10"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recommendedKcal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/recommended_kcal_title"
                app:helperTextEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="@string/breed_title"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtRecommendedKcal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Recommended_kcal_random"
                    android:focusable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pathologies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/patologies_title"
                app:helperTextEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="@string/breed_title"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPathologies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/patologies_random"
                    android:focusable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/washFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/wash_title"
                android:focusable="false"
                app:helperTextEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="@string/breed_title"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtWashFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wash_random" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/inputBirthMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:hint="@string/birth_random"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:icon="@drawable/baseline_cake_black_18dp"
                app:iconTint="@color/black"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp"
                android:layout_marginBottom="40dp" />

            <Button
                android:id="@+id/updatePet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/update_pet"
                android:paddingStart="40dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                style="@style/rounded_button"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/delete_pet"
                android:textColor="@color/white"
                app:icon="@drawable/baseline_delete_black_18dp"
                android:textSize="14sp"
                app:iconTint="@color/white"
                android:backgroundTint="@color/red"
                android:layout_marginBottom="40dp"
                style="@style/rounded_button"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
