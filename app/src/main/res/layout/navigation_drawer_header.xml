<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    android:paddingTop="27dp"
    android:paddingStart="20dp">

    <org.pesmypetcare.mypetcare.activities.views.CircularImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/user_sample"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="11dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/lblUserName"
            android:text="@string/defaultName"
            style="@style/profileText"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/lblUserEmail"
            android:text="@string/defaultEmail"
            style="@style/profileEmail"/>

    </LinearLayout>

</LinearLayout>
