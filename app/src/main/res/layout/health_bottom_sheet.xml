<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:text="@string/choose_statistic"
        android:paddingBottom="20dp"
        style="@style/section_title"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <TableRow>
            <LinearLayout
                android:id="@+id/healthWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/single_paw"/>

                <TextView
                    android:text="@string/health_weight"
                    style="@style/health_bottom_sheet_text"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/healthDailyKilocalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/single_paw"/>

                <TextView
                    android:text="@string/health_recommended_daily_kilocalories"
                    style="@style/health_bottom_sheet_text"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/healthExerciseFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/single_paw"/>

                <TextView
                    android:text="@string/health_exercise_frequency"
                    style="@style/health_bottom_sheet_text"/>

            </LinearLayout>

        </TableRow>

        <TableRow>
            <Space
                android:layout_height="20dp"
                android:layout_width="match_parent"/>
        </TableRow>

        <TableRow>
            <LinearLayout
                android:id="@+id/healthWeeklyExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/single_paw"/>

                <TextView
                    android:text="@string/health_weekly_exercice"
                    style="@style/health_bottom_sheet_text"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/healthWeeklyKilocalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/single_paw"/>

                <TextView
                    android:text="@string/health_weekly_kilocalories_average"
                    style="@style/health_bottom_sheet_text"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/healthWashFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/single_paw"/>

                <TextView
                    android:text="@string/health_wash_frequency"
                    style="@style/health_bottom_sheet_text"/>

            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>
